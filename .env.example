# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration - Supabase
# Obtén estos valores desde: https://supabase.com/dashboard/project/_/settings/database
DB_HOST=db.your-project-ref.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-supabase-database-password
DB_SSL=true

# Connection Pooling (Supavisor para mejor rendimiento)
# Para conexión pooled (transacción mode): db.your-project-ref.supabase.co:6543
# Para conexión directa: db.your-project-ref.supabase.co:5432
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=10000
DB_POOL_EVICT=1000

# NTT Data Axet LLM Enabler Configuration
AXET_MOCK_MODE=true
AXET_BASE_URL=https://axet-pre.nttdata.com
AXET_PROJECT_ID=your_project_id
AXET_USER_ID=your_user_id
AXET_ASSET_ID=your_asset_id
AXET_MODEL=gpt-5.1

# Axet Token Management
AXET_TOKEN_URL=https://talkg.activos-coe.deptapps.everis.cloud/g
AXET_TOKEN_AUTH=your_bearer_token_for_authentication
AXET_FLOW_ID=your_flow_id
AXET_ENVIRONMENT=DEV
AXET_USER_OKTA_ID=your_okta_user_id

# CORS Configuration
CORS_ORIGIN=http://localhost:8080,http://localhost:3001

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_KEY=your-api-key-for-service-to-service

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
